<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/guide_padding"
                android:paddingEnd="@dimen/guide_padding"
                android:text="@string/question"
                android:textSize="@dimen/guide_text_size" />

            <TextView
                android:id="@+id/item_main_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_margin_padding"
                android:padding="@dimen/content_margin_padding"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/guide_padding"
                android:paddingEnd="@dimen/guide_padding"
                android:text="@string/option_one"
                android:textSize="@dimen/guide_text_size" />

            <TextView
                android:id="@+id/item_main_option_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_margin_padding"
                android:padding="@dimen/content_margin_padding"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/guide_padding"
                android:paddingEnd="@dimen/guide_padding"
                android:text="@string/option_two"
                android:textSize="@dimen/guide_text_size" />

            <TextView
                android:id="@+id/item_main_option_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_margin_padding"
                android:padding="@dimen/content_margin_padding"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>